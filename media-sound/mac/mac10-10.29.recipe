SUMMARY="A fast and powerful lossless audio compressor"
DESCRIPTION="Monkey's Audio is a lossless audio format. This package provides \
the mac command line utility for compressing and decompressing Monkey's Audio \
files."
HOMEPAGE="https://www.monkeysaudio.com/"
COPYRIGHT="2000-2024 Matthew T. Ashland"
LICENSE="BSD (3-clause)"
REVISION="1"
SOURCE_URI="https://www.monkeysaudio.com/files/MAC_${portVersion/./}_SDK.zip"
CHECKSUM_SHA256="d3c749091ae27cb3cab341fe7251ab8489679b5c4ea385e40bc5ff5e1ea57360"
SOURCE_DIR=""

ARCHITECTURES="all !x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

commandSuffix=$secondaryArchSuffix
commandBinDir=$binDir
if [ "$targetArchitecture" = x86_gcc2 ]; then
	commandSuffix=
	commandBinDir=$prefix/bin
fi

libVersion="10"

PROVIDES="
	mac10$secondaryArchSuffix = $portVersion
	lib:libMAC$secondaryArchSuffix = $libVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

PROVIDES_tools="
	mac10${secondaryArchSuffix}_tools = $portVersion
	cmd:mac$commandSuffix = $portVersion
	"
REQUIRES_tools="
	mac10$secondaryArchSuffix == $portVersion
	haiku$secondaryArchSuffix
	"
CONFLICTS_tools="
	mac$secondaryArchSuffix
	"

PROVIDES_devel="
	mac10${secondaryArchSuffix}_devel = $portVersion
	devel:libMAC$secondaryArchSuffix = $libVersion
	"
REQUIRES_devel="
	mac10$secondaryArchSuffix == $portVersion base
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	cmd:cmake
	cmd:g++$secondaryArchSuffix
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:make
	"

defineDebugInfoPackage mac10$secondaryArchSuffix \
	$libDir/libMAC.so.$libVersion \
	"$(getPackagePrefix tools)"/bin/mac

BUILD()
{
	export CXXFLAGS="$CXXFLAGS -fpermissive"
	cmake -Bbuild -S. -DCMAKE_BUILD_TYPE=Release \
		$cmakeDirArgs \
		-DCMAKE_INSTALL_BINDIR=$commandBinDir
	make -C build $jobArgs
}

INSTALL()
{
	make -C build install

	install -m 755 -d "$developDocDir"
	install -m 644 -t "$developDocDir" Readme.txt

	prepareInstalledDevelLib libMAC

	packageEntries tools \
		$commandBinDir

	packageEntries devel \
		"$developDir"
}
